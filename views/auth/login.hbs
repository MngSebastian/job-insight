<div class="login-box">

  <form action="/auth/login" method="POST" id="form-container">
    <h2>Login</h2>

    <ion-icon name="person"></ion-icon>
    <input id="username" class="login-inputs" type="text" name="username" placeholder="Username">

    <br><br>

    <ion-icon name="lock-closed"></ion-icon>
    <input id="password" type="password" class="login-inputs" name="password" placeholder="Password">
    <br>

    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}

    <br><br>

    <button class="login-btn">Login</button>

    <p class="account-message">
      Don't have an account yet?
      <a href="/auth/signup">Signup</a>
    </p>
  </form>
</div>