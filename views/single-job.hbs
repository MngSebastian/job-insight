<div class="main-div">
    <div class="form-all-jobs">
        <form action="/jobs/search" method="GET">
            <input class="input-fields-all-jobs" name="jobTitle" placeholder="Job Title" type="text" />
            <input class="input-fields-all-jobs" name="location" placeholder="Location" type="text" />
            <button class="btn-all-jobs" type="submit">
                <ion-icon class="search-icon" name="search"></ion-icon>
            </button>
        </form>
    </div>
    <div class="main-info">
        <div class="title">
            <strong>
                <p>{{jobData.title}}</p>
                <hr class="title-hr">
            </strong>
        </div>

        <div class="info">
            <p>
                <ion-icon name="briefcase"></ion-icon>&nbsp;{{jobData.company.display_name}}
            </p>
            <p>
                <ion-icon name="location"></ion-icon>&nbsp;{{jobData.location}}
            </p>
            <p>
                <ion-icon name="time"></ion-icon>&nbsp;{{jobData.contract_time}}
            </p>

            <p class="date">
                <ion-icon name="calendar"></ion-icon>&nbsp;{{jobData.created}}
            </p>
        </div>
    </div>


    {{!-- <div class="created">
    </div> --}}
    <div class="description">
        <p>{{jobData.description}}</p>
    </div>
    <div class="buttons">
        <a href="{{jobData.redirect_url}}"><button class="apply-btn">Apply</button></a>
        <a href="{{jobData.redirect_url}}"><button class="learn-more-btn">Learn More</button></a>
        {{#if user}}
        <form action="/jobs/favorite/{{jobData.id}}?location={{location}}" method="POST">
            {{style}}
            <button type="submit" class="favorite-btn {{jobData.style}}">Favorite</button>
        </form>
        {{/if}}


        {{!-- {{#if addedToFav}}
        <div>
            Added to Favorites
        </div>
        {{/if}} --}}
    </div>


</div>
